!!! 5
%html
  %head
    %meta{charset: 'utf-8'}
    %title= "Resume of #{full_name}"
    %meta{:name=>"viewport", :content=>"width=device-width, initial-scale=1.0"}

    = partial "open_graph"
    = partial "twitter_card"

    %link{:href=>"//netdna.bootstrapcdn.com/bootswatch/3.0.0/cerulean/bootstrap.min.css", :rel=>"stylesheet"}
    = stylesheet_link_tag 'resume'
    %script{:src=>"//code.jquery.com/jquery.js"}
    %script{:src=>"//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"}
    = javascript_include_tag 'resume'

    %link{type: "text/plain", rel: "author", href: "/humans.txt"}

  %body
    %header#header= partial(:header, locals: {:title => full_name})
    .container
      %main#main= yield
    %footer#footer= partial 'footer'
